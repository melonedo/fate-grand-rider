{
	"use-debug-mode":true, 
	"global-zoom-scale": 2,
	"show-physics-debug-boxes": false,
	"display-cocos-stats": true,
	"skip-starting-scene": false,
	"hero-speed-scale": 100,
	"debug-set": {
		"map": "maps/sample_map.tmx",
		"hero": "sample-man",
		"weapon": "basic-bow"
	},
	"heroes": {
		"sample-man": {
			"stand": {
				"interval": 1,
				"frames": ["man1_rt2.png", "man1_rt1.png"]
