			"walk": {
				"interval": 0.2,
				"frames": ["man1_rt2.png", "man1_rt1.png"]
			},
			"hand-pos": [0.75,0.44]
		}
	},
  "weapon": {
    "basic-bow": {
      "type": "bow",
      "bow": {
        "frame": "W_Bow02.png",
